<UserControl x:Class="SapperOnWpf.SapperCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:SapperOnWpf.Properties"
             xmlns:local="clr-namespace:SapperOnWpf"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <Button 
            Name="ContentButton"
            Content="" 
            FontFamily="Microsoft Sans Serif"
            FontSize="20"
            Background="LightGray"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Height="{Binding Source={x:Static p:Settings.Default}, Path=ButtonSize}"
            Width="{Binding Source={x:Static p:Settings.Default}, Path=ButtonSize}"
            />
    </Grid>
</UserControl>
