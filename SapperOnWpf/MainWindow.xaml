<Window x:Class="SapperOnWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SapperOnWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="179" Width="337" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Button Name="StartButton"  Content="START" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" Click="StartButton_Click"/>
        <Label Content="Rows" HorizontalAlignment="Left" Margin="81,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="RowsBox" HorizontalAlignment="Left" Margin="135,14,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120" PreviewTextInput="AllowOnlyInteger"/>
        <Label Content="Columns" HorizontalAlignment="Left" Margin="81,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ColumnsBox" HorizontalAlignment="Left" Margin="135,44,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <Label Content="Mines" HorizontalAlignment="Left" Margin="81,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="MinesBox" HorizontalAlignment="Left" Margin="135,74,0,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
